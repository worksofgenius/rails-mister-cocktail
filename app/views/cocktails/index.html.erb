
<div class="container">
  <h1>COCKTAILS</h1>

  <div class="card">
    <ul>
      <% @cocktails.each do |cocktail| %>
        <li>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <%= link_to cocktail_path(cocktail), method: :delete, data: {confirm: 'Delete cocktail?'}, :class=> "you_class" do %>
            <i class="far fa-times-circle"></i>
          <% end %>  
        </li>
      <% end %>
    </ul>
  </div>
</div>