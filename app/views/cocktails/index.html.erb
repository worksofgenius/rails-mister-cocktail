<h1>Cocktails</h1>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li>
      <%= link_to cocktail.name, cocktail_path(cocktail) %> | 
      <%= link_to 'Create', new_cocktail_path %> |
      <%= link_to 'Delete', cocktail_path(cocktail), method: :delete, data: {confirm: 'Delete cocktail?'}  %>    
    </li>
  <% end %>
</ul>
<%= link_to 'Add New Cocktail', new_cocktail_path %>