<div class="container">
  <div class="card-cocktail">
    <%= image_tag "glasses-cropped.png", :alt => "Create a new cocktail" %>
    <div class="card-cocktail-info">
      <div>
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
